@page
@model EverCleanDbSystem.Pages.Suppliers.IndexModel

@{
    ViewData["Title"] = "Supplier";
}
<div class="listing-screen">
<h1>Supplier Listing</h1>

<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find Supplier telephone details:            
       
        <input type="text" name="SearchString" value="@Model.CurrentFilter" />
        <input type="submit" value="Search" class="btn btn-primary" /> |
        <a asp-page="./Index">Back to full List</a>
            </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier[0].Telelphone)
            </th>
            <th>
                <a asp-page="Create">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Supplier) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telelphone)
            </td>
            <td>
            </td>
        </tr>
}
    </tbody>
</table>

</div>
